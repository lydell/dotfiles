[user]
	name = Simon Lydell
	email = simon.lydell@gmail.com
[core]
	editor = nvim
	pager = delta --diff-so-fancy
[interactive]
	diffFilter = delta --color-only
	singleKey = true
[delta]
	features = side-by-side line-numbers decorations navigate
	tabs = 2
[diff]
	colorMoved = default
	colorMovedWS = allow-indentation-change
	algoritm = histogram
[branch]
	sort = -committerdate
[push]
	default = current
	autoSetupRemote = true
[log]
	date = iso
[init]
	defaultBranch = main
	templatedir = ~/src/dotfiles/.git-templates
[rerere]
	enabled = true
	autoupdate = true
[merge]
	conflictstyle = zdiff3
[pull]
	ff = only
[stash]
	showIncludeUntracked = true
	showPatch = true
[advice]
	statusHints = false
[includeIf "gitdir:~/in/"]
	path = ~/in/.gitconfig
