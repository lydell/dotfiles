[user]
	name = Simon Lydell
	email = simon.lydell@gmail.com
[core]
	editor = nvim
	excludesfile = ~/.gitignore_global
	pager = diff-so-fancy | less --tabs=2 -R
[color]
	ui = true
[credential]
	helper = cache
[push]
	default = current
[log]
	date = iso
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[init]
	; Default: /usr/share/git-core/templates/hooks
	templatedir = ~/.git-templates
[rerere]
	enabled = true
	autoupdate = true
[merge]
	conflictstyle = diff3
