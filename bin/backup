#!/usr/bin/env bash

rsync --archive ~/ "/media/$USER/backup/$(uname --nodename)/home" \
  --delete --backup \
  --progress --human-readable \
  --exclude /.atom/ \
  --exclude /.cache/ \
  --exclude /.elm/ \
  --exclude /.fzf/ \
  --exclude /.gem/ \
  --exclude /.node-gyp/ \
  --exclude /.npm/ \
  --exclude /.npm-global/ \
  --exclude /.python/ \
  --exclude /.stack/ \
  --exclude /.thumbnails/ \
  --exclude /.tmp/ \
  --exclude /.vim/ \
  --exclude /old/ \
  --exclude /programs/ \
  --exclude /tmp/ \
  --exclude /VirtualBox\ VMs/ \
  --exclude .stack-work/ \
  --exclude .venv/ \
  --exclude bower_components/ \
  --exclude CACHE/ \
  --exclude elm-stuff/ \
  --exclude node_modules/ \
  --exclude __pycache__/ \
  "$@"
